    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/black_details_ball_textcolor2"
        >
        <Button
            android:id="@+id/basket_analyze_cancle"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="40dp"
            android:text="@string/basket_analyze_dialog_cancle"
            android:gravity="center"
            android:textColor="@color/football_screen_checked_text_color"
            android:background="@color/black_details_ball_textcolor2"
            />
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/selected_bg" />
        <Button
            android:id="@+id/basket_analyze_confirm"
            android:layout_width="0dp"
            android:layout_weight="1"
