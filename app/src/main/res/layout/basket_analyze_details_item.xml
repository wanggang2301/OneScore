<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/basket_details_ball6"
    android:paddingTop="@dimen/basket_details_ball6"
    android:paddingLeft="@dimen/basket_details_ball5"
    android:paddingRight="@dimen/basket_details_ball5"
    >

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:orientation="horizontal"-->
        <!--android:paddingBottom="@dimen/basket_details_ball6"-->
        <!--android:paddingTop="@dimen/basket_details_ball6">-->

        <TextView
            android:id="@+id/basket_details_data"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="16-03-31"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/basket_details_team_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:gravity="center"
            android:text="乙蓝甲乙蓝甲"
            android:singleLine="true"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />
        <TextView
            android:id="@+id/basket_details_guest_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/basket_details_home_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text=""
            android:singleLine="true"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/basket_details_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:gravity="center"
            android:text="107:107"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />

        <TextView
            android:id="@+id/basket_details_big_small"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:gravity="center"
            android:text="小"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />
        <TextView
            android:id="@+id/basket_details_concede"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="让分"
            android:textColor="@color/mdy_666"
            android:textSize="@dimen/text_size_10" />
    <!--</LinearLayout>-->
</LinearLayout>