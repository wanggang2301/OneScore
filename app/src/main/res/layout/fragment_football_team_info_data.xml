<?xml version="1.0" encoding="utf-8"?>
<com.hhly.mlottery.widget.ExactSwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/refresh_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scroll_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--头部-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/setting_bg"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/ll_data_select"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1.5"
                        android:padding="10dp">

                        <TextView
                            android:id="@+id/tv_data_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:textColor="@color/snooker_rank_txt_top3"
                            android:textSize="@dimen/item_football_half_score"
                            tools:text="英超" />

                        <ImageView
                            android:id="@+id/tv_team_select"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="5dp"
                            android:background="@mipmap/foot_team_info_select_ok" />
                    </RelativeLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foot_team_info_total"
                        android:textColor="@color/res_time_color"
                        android:textSize="@dimen/item_football_half_score" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foot_team_info_zu"
                        android:textColor="@color/res_time_color"
                        android:textSize="@dimen/item_football_half_score" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="@string/foot_team_info_ke"
                        android:textColor="@color/res_time_color"
                        android:textSize="@dimen/item_football_half_score" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/linecolor" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <!--排名-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/basket_ranking"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_rank_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_rank_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_rank_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--积分-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/new_analyze_integral"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_score_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_score_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_score_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--比赛场次-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_team_info_match_count"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_count_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_count_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_count_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--胜-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_odds_eu_left"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_win_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_win_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_win_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--平-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_odds_eu_middle"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_equ_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_equ_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_equ_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--负-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_odds_eu_right"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_lose_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--进球-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/set_goal_txt"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_goal_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_goal_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_goal_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--失球-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_team_info_lose_goal"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_lose_goal_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_goal_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_goal_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--均场进球-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_team_info_goal_avg"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_goal_avg_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_goal_avg_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_goal_avg_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />

                        <!--均场失球-->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1.5"
                                android:gravity="center"
                                android:padding="10dp"
                                android:text="@string/foot_team_info_lose_avg"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score" />

                            <TextView
                                android:id="@+id/tv_data_lose_avg_total"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_avg_zu"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                            <TextView
                                android:id="@+id/tv_data_lose_avg_ke"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:textColor="@color/res_time_color"
                                android:textSize="@dimen/item_football_half_score"
                                tools:text="1" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"
                            android:background="@color/linecolor" />
                    </LinearLayout>

                    <FrameLayout
                        android:id="@+id/fl_mask_view"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:alpha="0"
                        android:background="@color/black" />
                </FrameLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

        <include layout="@layout/network_exception" />

        <TextView
            android:id="@+id/tv_not_data"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/nodata"
            android:visibility="gone" />

    </FrameLayout>
</com.hhly.mlottery.widget.ExactSwipeRefreshLayout>
