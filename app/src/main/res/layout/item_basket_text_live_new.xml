<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.hhly.mlottery.view.CircleImageView
            android:id="@+id/ci_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/basket_default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.5"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_top_line"
            android:layout_width="1dp"
            android:layout_height="8.5dp"
            android:background="#dddddd" />

        <TextView
            android:layout_width="6dp"
            android:layout_height="6dp"
            android:background="@drawable/item_basket_text_live"
            android:text="." />

        <TextView
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#dddddd" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@color/whitesmoke"
        android:paddingLeft="7dp">

        <TextView
            android:id="@+id/tv_remainTime"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text=""
            android:textColor="#999999"
            android:textSize="@dimen/text_size_10" />

        <ImageView
            android:id="@+id/iv_topsanjiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:src="@mipmap/basket_sanjiaoxing" />

        <TextView
            android:id="@+id/tv_eventContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:background="@drawable/item_basket_eventontent_bg"
            android:paddingBottom="7dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="7dp"
            android:text="文字直播"
            android:textColor="@color/content_txt_black"
            android:textSize="@dimen/text_size_13" />
    </LinearLayout>
</LinearLayout>