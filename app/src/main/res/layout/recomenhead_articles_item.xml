<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/betting_game_details_lay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/betting_league_name"
                        style="@style/betting_recommend_details_style"
                        android:text="联赛" />

                    <TextView
                        android:id="@+id/betting_round"
                        style="@style/betting_recommend_details_style"
                        android:paddingLeft="10dp"
                        android:text="轮次"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/betting_date"
                        style="@style/betting_recommend_details_style"
                        android:paddingLeft="10dp"
                        android:text="04-18" />

                    <TextView
                        android:id="@+id/betting_week"
                        style="@style/betting_recommend_details_style"
                        android:paddingLeft="10dp"
                        android:text="12:18"
                        android:visibility="visible" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true">

                    <TextView
                        android:id="@+id/betting_concede_points_spf"
                        style="@style/betting_recommend_style"
                        android:background="@drawable/betting_shape_corners_spf"
                        android:text="让球胜平负"
                        android:textColor="@color/betting_recommend_zhuanjia_spf_color" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/betting_tobuy_check"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/betting_home_name"
                            style="@style/betting_recommend_team_name_style"
                            android:textSize="@dimen/text_size_14"
                            android:text="主队XXXX" />

                        <TextView
                            android:id="@+id/betting_vs"
                            style="@style/betting_recommend_team_name_style"
                            android:paddingLeft="10dp"
                            android:text="VS" />

                        <TextView
                            android:id="@+id/betting_guest_name"
                            style="@style/betting_recommend_team_name_style"
                            android:paddingLeft="10dp"
                            android:textSize="@dimen/text_size_14"
                            android:text="客队XXXX" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">

                        <TextView
                            android:id="@+id/betting_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="￥ 8.00"
                            android:textColor="@color/betting_recommend_grand_color"
                            android:textSize="@dimen/text_size_16" />

                        <TextView
                            android:id="@+id/betting_buy_num"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="9999" />

                        <TextView
                            android:id="@+id/textView14"
                            style="@style/betting_recommend_details_style"
                            android:text="" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout

                    android:id="@+id/betting_tobuy_or_check"
                    android:layout_width="70dp"
                    android:layout_height="28dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/betting_shape_corners_buy"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/betting_txt_buy"
                        android:textColor="@color/betting_recommend_zhuanjia_grand_color"
                        android:textSize="@dimen/text_size_16" />
                </LinearLayout>
                <ImageView
                    android:id="@+id/iv"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="15dp"
            android:paddingTop="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/betting_recommend_details_bg_color"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="@string/betting_reason_txt"
                    android:textColor="@color/betting_recommend_details_color"
                    android:textSize="@dimen/text_size_15" />

                <TextView
                    android:id="@+id/betting_recommended_reason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:text="......"
                    android:textColor="@color/betting_recommend_details_color"
                    android:textSize="@dimen/text_size_15" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/betting_recommend_details_bg_color" />


    </LinearLayout>
</LinearLayout>