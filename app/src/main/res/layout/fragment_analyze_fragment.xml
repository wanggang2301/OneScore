                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/guest_goal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/more_record"
                        android:textSize="@dimen/text_size_25" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/guest_goal"
                        android:text="@string/goal"
                        android:textColor="@color/content_txt_light_grad"
                        android:textSize="@dimen/text_size_10" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toEndOf="@id/guest_goal"
                        android:layout_toRightOf="@id/guest_goal"
                        android:text="@string/football_analyze_ball"
                        android:textColor="@color/more_record"
                        android:textSize="@dimen/text_size_10" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/football_analyze_nodata3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/basket_analyze_nodata_hight"
            android:gravity="center"
            android:paddingBottom="@dimen/basket_details_item_height"
            android:paddingTop="@dimen/basket_details_item_height"
            android:text="@string/basket_nodata"
            android:textColor="@color/black_details_ball_textcolor"
            android:textSize="@dimen/text_size_13"
            android:visibility="gone" />

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/home_item_bg" />

        <!--心水推荐-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="@string/new_analyze_recommend"
                android:textColor="@color/analyze_title"
