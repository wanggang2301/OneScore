                        android:textColor="@color/odds_details"
                        android:textSize="@dimen/text_size_10" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line_football_footer" />

