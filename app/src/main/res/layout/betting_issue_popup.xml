<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pop_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#999999"
    >

    <RelativeLayout
        android:id="@+id/popup_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">
                <LinearLayout
                    android:id="@+id/close_popup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingRight="20dp">
                    <ImageView
                        android:id="@+id/close_popup_img"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:background="@mipmap/football_icon_close"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/close_popup"
                    android:layout_alignParentRight="true"
                    android:paddingRight="35dp"
                    >

                    <View
                        android:layout_width="1dp"
                        android:layout_height="30dp"
                        android:background="#ffffff"
                        />

                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/betting_issue_yuanjiao_bg"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/betting_recommend_issue_title_color"
                        android:text="推介玩法"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <RadioGroup
                        android:id="@+id/play_gendergroup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--&gt;-->

                            <RadioButton
                                android:id="@+id/play_spf_radio"
                                style="@style/betting_recommend_issue_check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/betting_issue_check_color_bg"
                                android:text="胜平负"
                                android:checked="true"
                                />
                        <!--</LinearLayout>-->
                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingLeft="10dp">-->
                            <View
                                android:layout_width="10dp"
                                android:layout_height="30dp"/>
                            <RadioButton
                                android:id="@+id/play_lqspf_radio"
                                style="@style/betting_recommend_issue_check"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/betting_issue_check_color_bg"
                                android:text="让球胜平负"/>
                        <!--</LinearLayout>-->
                    </RadioGroup>

                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/betting_recommend_issue_title_color"
                        android:text="胜平负"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">

                    <RadioGroup
                        android:id="@+id/spf_gendergroup"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content">-->

                            <RadioButton
                                android:id="@+id/spf_radio_s"
                                style="@style/betting_recommend_issue_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/betting_issue_check_color_bg"
                                android:text="胜(1.76)"
                                android:checked="true"/>
                        <!--</LinearLayout>-->
                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingLeft="10dp">-->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="30dp"/>
                            <RadioButton
                                android:id="@+id/spf_radio_p"
                                style="@style/betting_recommend_issue_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/betting_issue_check_color_bg"
                                android:text="平(1.76)"/>
                        <!--</LinearLayout>-->
                        <!--<LinearLayout-->
                            <!--android:layout_width="wrap_content"-->
                            <!--android:layout_height="wrap_content"-->
                            <!--android:paddingLeft="10dp">-->
                        <View
                            android:layout_width="10dp"
                            android:layout_height="30dp"/>
                            <RadioButton
                                android:id="@+id/spf_radio_f"
                                style="@style/betting_recommend_issue_check"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@drawable/betting_issue_check_color_bg"
                                android:text="负(1.76)"/>
                        <!--</LinearLayout>-->
                    </RadioGroup>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="20dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_14"
                        android:textColor="@color/betting_recommend_issue_title_color"
                        android:text="方案价格"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <EditText
                            android:id="@+id/edit_query"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_size_12"
                            android:hint="请输入价格，0表示免费"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingLeft="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:textSize="@dimen/text_size_12"
                            android:text="元"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/issue_radio_yuyin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:paddingTop="20dp">
                    <LinearLayout
                        android:id="@+id/issue_record"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">
                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@mipmap/football_icon_yuyin_d"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="按住 说理由"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/issue_play_yuyin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="25dp">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        >
                        <LinearLayout
                            android:id="@+id/radio_play"
                            android:layout_width="200dp"
                            android:layout_height="28dp"
                            android:background="@drawable/betting_issue_yuyin_bg">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:paddingLeft="10dp">

                                <ImageView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@mipmap/football_icon_yuyin_a"
                                    />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:text="60'"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/radio_restart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:paddingTop="15dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:autoLink="all"
                            android:text="重新录制"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:paddingTop="36dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/fabu_text"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:textColor="@color/betting_recommend_zhuanjia_grand_color"
                    android:background="@drawable/betting_issue_fabu_bg"
                    android:text="发布"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>