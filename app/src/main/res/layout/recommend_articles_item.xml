<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_recommenditem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <LinearLayout
            android:id="@+id/betting_game_details_lay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/betting_league_name"
                            style="@style/betting_recommend_details_style"
                            android:text="联赛" />

                        <TextView
                            android:id="@+id/betting_round"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="轮次" />

                        <TextView
                            android:id="@+id/betting_date"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="04-18" />

                        <TextView
                            android:id="@+id/betting_week"
                            style="@style/betting_recommend_details_style"
                            android:paddingLeft="10dp"
                            android:text="12:18" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true">

                        <TextView
                            android:id="@+id/betting_concede_points_spf"
                            style="@style/betting_recommend_style"
                            android:background="@drawable/betting_shape_corners_spf"
                            android:text="让球胜平负"
                            android:textColor="@color/betting_recommend_zhuanjia_spf_color" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="7dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/betting_home_name"
                                style="@style/betting_recommend_team_name_style"
                                android:text="主队XXXX" />

                            <TextView
                                android:id="@+id/betting_vs"
                                style="@style/betting_recommend_team_name_style"
                                android:paddingLeft="10dp"
                                android:text="VS" />

                            <TextView
                                android:id="@+id/betting_guest_name"
                                style="@style/betting_recommend_team_name_style"
                                android:paddingLeft="10dp"
                                android:text="客队XXXX" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp">

                            <TextView
                                android:id="@+id/betting_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="￥ 8.00"
                                android:textColor="@color/betting_recommend_grand_color"
                                android:textSize="@dimen/text_size_16" />

                            <TextView
                                android:id="@+id/betting_buy_num"
                                style="@style/betting_recommend_details_style"
                                android:paddingLeft="10dp"
                                android:text="9999已购买" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/betting_tobuy_or_check"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:paddingTop="20dp">

                        <ImageView
                            android:id="@+id/iv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="wrap_content"
                            android:layout_height="28dp"
                            android:background="@drawable/betting_shape_corners_buy"
                            android:gravity="center"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:text="@string/betting_txt_check"
                            android:textColor="@color/betting_recommend_zhuanjia_grand_color"
                            android:textSize="@dimen/text_size_16"
                            android:visibility="gone" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="15dp"
                android:paddingTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/betting_recommend_details_bg_color">

                    <TextView
                        android:id="@+id/betting_recommended_reason"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:text="推荐理由：推荐理XXX由推荐理由XXX推荐理由推XX荐理由"
                        android:textColor="@color/betting_recommend_details_color"
                        android:textSize="@dimen/text_size_15" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="@color/betting_recommend_details_bg_color" />
    </LinearLayout>

</LinearLayout>