<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_over_score_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="50dp"
    android:layout_marginRight="50dp"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="40dp"
    android:background="@drawable/football_datails_head"
    android:visibility="visible"
    android:orientation="vertical">

    <!--联赛名-->
    <TextView
        android:id="@+id/tv_head_match_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/tennis_datails_title"
        android:ellipsize="end"
        android:gravity="center"
        android:lines="1"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:textColor="@color/snooker_score_textcolor"
        android:textSize="@dimen/home_pager_title"
        tools:text="国际友谊赛" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--主队name-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head_home_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/football_animation_logo_bg"
                android:padding="2dp"
                android:src="@mipmap/score_default" />

            <TextView
                android:id="@+id/tv_head_home_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/linecolor"
                android:textSize="@dimen/number_desc"
                android:paddingTop="10dp"
                tools:text="客队name" />

        </LinearLayout>

        <!--desc-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_head_data_or_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/linecolor"
                android:textSize="@dimen/number_desc"
                tools:text="2017-07-07" />

            <TextView
                android:id="@+id/tv_head_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/linecolor"
                android:textSize="@dimen/number_desc"
                android:paddingTop="5dp"
                tools:text="(1 : 2)" />

            <TextView
                android:id="@+id/tv_head_over_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/number_red"
                android:textSize="25sp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                tools:text="1 : 1" />

        </LinearLayout>

        <!--客队name-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head_guest_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/football_animation_logo_bg"
                android:padding="2dp"
                android:src="@mipmap/score_default" />

            <TextView
                android:id="@+id/tv_head_guest_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/linecolor"
                android:textSize="@dimen/number_desc"
                android:paddingTop="10dp"
                tools:text="客队name" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
