<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/football_cardview_margin"
    android:layout_marginTop="@dimen/football_cardview_margin"
    android:clickable="true"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0.5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <TextView
            android:id="@+id/account_trade_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="竞猜推介"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/account_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2017-0dsf5-20"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/account_recharge_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/account_trade_name"
            android:layout_marginTop="10dp"
            android:text="消费"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15" />

        <TextView
            android:id="@+id/account_trade_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="16dp"
            android:text="+8000000.00"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15"
            android:layout_below="@id/account_trade_name"
            android:layout_toRightOf="@id/account_recharge_name"
             />
        <TextView
            android:id="@+id/account_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="20:30"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15"
            android:layout_alignBaseline="@id/account_trade_amount"
            android:layout_alignBottom="@id/account_trade_amount"
            android:layout_alignLeft="@id/account_date"
            android:layout_alignStart="@id/account_date" />
        <TextView
            android:id="@+id/account_status_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/account_trade_name"
            android:textSize="@dimen/text_size_15"
            android:text="支付完成"
            android:layout_below="@id/account_trade_name"
            android:layout_toLeftOf="@id/account_time"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>