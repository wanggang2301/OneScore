<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/imagenotleft"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="#F5F5F5"
        android:padding="5dp">

        <ImageView
            android:id="@+id/image_notleft_counselfragment_listviewitem"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/video_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@mipmap/video_default"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@drawable/shape_gradient_ads_bg"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/titlenoleft"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="15sp"


                />

            <TextView
                android:id="@+id/subtitlenoleft"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/imageleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/lay"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp"

            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">
            <!--位了设置副标题于推荐的蓝色背景底部对齐，所以用了marginbotto否则在父布局用统一pading就行-->
            <ImageView
                android:id="@+id/leftimage"
                android:layout_width="91dp"
                android:layout_height="68dp"
                android:layout_marginBottom="10dp"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/lefttitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/leftimage"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="#333333"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_tj"
                android:layout_width="30dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/leftimage"
                android:layout_toRightOf="@+id/leftimage"
                android:background="@drawable/shape_tuijian_bg"
                android:gravity="center"
                android:text="@string/foot_tujian"
                android:textColor="#ffffff"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/tv_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="14dp"
                android:layout_marginLeft="5dp"
                android:layout_toLeftOf="@+id/tv_ybf"
                android:layout_toRightOf="@+id/tv_tj"
                android:ellipsize="end"
                android:gravity="left"
                android:singleLine="true"
                android:textColor="#333333"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_ybf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/leftimage"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="14dp"
                android:textColor="#999999"

                android:textSize="10sp" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/lay"
            android:background="#DDDDDD">

        </View>
    </RelativeLayout>


</RelativeLayout>
