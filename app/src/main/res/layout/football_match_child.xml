<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/football_match_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:id="@+id/tv_back"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#f5f5f5" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_match_jingcai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <View
                    android:layout_width="0.5dp"
                    android:layout_height="match_parent"
                    android:background="@color/item_match_jingcai" />

                <View
                    android:layout_width="3dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/selector_match_red"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/match_leaguename"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="亚冠杯"
                    android:textColor="@color/content_txt_black" />


                <TextView
                    android:id="@+id/match_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:textColor="@color/res_pl_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/match_status"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"

                    android:textColor="@color/res_pl_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/match_socer"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/res_pl_color"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/item_football_frequency"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_toRightOf="@id/match_socer"
                    android:text="'"
                    android:textColor="@color/football_keeptime"
                    android:textSize="@dimen/item_football_frequency"
                    android:visibility="gone" />


            </LinearLayout>


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/odd_home_op_txt"
                android:textColor="@color/res_pl_color"
                android:textSize="14sp" />


            <TextView
                android:layout_width="0dp"

                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/odd_dish_op_txt"
                android:textColor="@color/res_pl_color"
                android:textSize="14sp" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:text="@string/odd_guest_op_txt"
                android:textColor="@color/res_pl_color"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="@color/item_match_jingcai" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/item_match_jingcai" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/match_week"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="周三"
                    android:textColor="@color/content_txt_black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="001"
                    android:textColor="@color/res_pl_color"
                    android:textSize="12sp" />


            </LinearLayout>


            <View
                android:layout_width="0.5dp"
                android:layout_height="wrap_content"
                android:background="@color/item_match_jingcai" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/match_home"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="皇家马德里"
                            android:textColor="@color/content_txt_black" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="wrap_content"
                            android:background="@color/item_match_jingcai" />

                        <TextView
                            android:id="@+id/match_letnumber"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/match_letwinodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="9.22"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/match_letsameodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="2.00"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/match_letloseodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="1.33"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/item_match_jingcai" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.8">

                        <TextView
                            android:id="@+id/match_guest"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.8"
                            android:gravity="center"
                            android:text="皇家马德里"
                            android:textColor="@color/content_txt_black" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/item_match_jingcai" />

                        <TextView
                            android:id="@+id/match_number"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.2"
                            android:gravity="center"
                            android:text="0"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="wrap_content"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/winodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="9.22"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/sameodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="2.00"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/item_match_jingcai" />

                    <TextView
                        android:id="@+id/loseodds"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.2"
                        android:gravity="center"
                        android:text="1.33"
                        android:textColor="@color/content_txt_black"
                        android:textSize="12sp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

            </LinearLayout>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@color/item_match_jingcai" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/item_match_jingcai" />


    </LinearLayout>

</LinearLayout>