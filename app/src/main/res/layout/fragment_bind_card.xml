<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/bind_card_back"
                style="@style/RippleBackgroudBorderless"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:scaleType="centerInside"
                android:src="@mipmap/blue_back" />
            <TextView
                android:id="@+id/withdraw_title"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:ellipsize="end"
                android:gravity="center"
                android:lines="1"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/bind_card_bindcard"
                android:textColor="@color/application_specialist_text_color"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="34dp"
      android:paddingLeft="12dp"
      android:background="#feffd8"
      >
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/bindcard_input_info"
          android:layout_centerVertical="true"
          android:textColor="#ff2221"
          />
  </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                style="@style/withdraw_text_style"
                android:text="@string/bind_card_bindcard"
                android:gravity="center"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/unionpay"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/withdraw1"
                style="@style/withdraw_text_style"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/bind_card_name"

                 />

            <EditText
                android:id="@+id/bind_card_name"
                style="@style/withdraw_text_style"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/betting_issues_fabu_edit_text_bg"
                android:hint="@string/bind_card_hint_name"
                android:paddingLeft="10dp"
                android:textColorHint="@color/edit_hint_color"
                android:maxLines="1"
                android:textSize="@dimen/text_size_13"
                android:textColor="@color/application_specialist_text_color"
                android:layout_marginLeft="20dp"
               />
        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center_vertical"
                >
                <TextView
                    android:id="@+id/withdraw2"
                    style="@style/withdraw_text_style"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:text="@string/bind_bind_bank" />

                <EditText
                    android:id="@+id/bind_card_bank"
                    style="@style/withdraw_text_style"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:background="@drawable/betting_issues_fabu_edit_text_bg"
                    android:hint="@string/bind_card_hint_bank"
                    android:paddingLeft="10dp"
                    android:textSize="@dimen/text_size_13"
                    android:textColor="@color/application_specialist_text_color"
                    android:textColorHint="@color/edit_hint_color"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            >
            <TextView
                style="@style/withdraw_text_style"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/bind_card_card_number" />

            <EditText
                android:id="@+id/bind_card_card_number"
                style="@style/withdraw_text_style"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:background="@drawable/betting_issues_fabu_edit_text_bg"
                android:hint="@string/bind_card_input_card_number"
                android:paddingLeft="10dp"
                android:layout_marginLeft="20dp"
                android:inputType="number"
                android:textSize="@dimen/text_size_11"
                android:textColorHint="@color/edit_hint_color"
                android:textColor="@color/application_specialist_text_color"
                android:gravity="center_vertical"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bind_card_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/tab_layout_bg"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_15"
                android:textColor="#0085e1"
                android:text="@string/bind_card_save"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
