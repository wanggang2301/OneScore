<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- <item_event_half_finish android:drawable="@color/colorPrimary" android:state_checked="true" />
     <item_event_half_finish android:drawable="@color/white" android:state_checked="false" />-->

    <!-- 点击时 -->
    <item android:state_checked="true">
        <shape>
            <solid android:color="@color/white"/>

            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>
            <stroke android:width="1dp" android:color="@color/white"/>
        </shape>
    </item>

    <!-- 获得焦点时 -->
    <item android:state_checked="false">
        <shape>
            <solid android:color="@color/colorPrimary"/>

            <corners android:bottomLeftRadius="5dp" android:topLeftRadius="5dp"/>
            <stroke android:width="1dp" android:color="@color/white"/>

        </shape>
    </item>

</selector>